@model ArticlesApp.Models.Category


<h2>Adaugare Categorie</h2>


<form asp-action="New" asp-controller="Categories" method="post">

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Denumire categorie</label>
        <input asp-for="CategoryName" class="form-control" />

        <!-- eroare pentru CategoryName -->
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <button class="btn btn-success" type="submit">Adauga categorie</button>

</form>


